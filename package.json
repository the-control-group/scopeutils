{
  "name": "scopeutils",
  "version": "1.1.0",
  "description": "Simple permission scopes and patterns with support for algebraic operations.",
  "license": "MIT",
  "author": {
    "name": "Mike Marcacci",
    "email": "mike.marcacci@thecontrolgroup.com"
  },
  "repository": "https://github.com/the-control-group/scopeutils#readme",
  "bugs": "https://github.com/the-control-group/scopeutils/issues",
  "keywords": [
    "scopes",
    "permissions",
    "acl",
    "glob",
    "pattern"
  ],
  "files": [
    "lib",
    "!lib/test.*"
  ],
  "main": "lib",
  "types": "./lib/index.d.ts",
  "engines": {
    "node": ">=6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.4.0",
    "@typescript-eslint/parser": "^1.4.0",
    "ava": "^1.2.1",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.2",
    "prettier": "^1.16.4",
    "typescript": "^3.3.3333"
  },
  "scripts": {
    "prepare": "rm -rf lib && npx tsc",
    "test": "npm run prepare && ava --verbose lib/test.js",
    "lint": "prettier -c '**/*.{json,yml,md,ts}' && eslint src --ext ts",
    "format": "prettier --list-different --write '**/*.{json,yml,md,ts}'",
    "watch": "rm -rf lib && npx tsc --watch"
  }
}
